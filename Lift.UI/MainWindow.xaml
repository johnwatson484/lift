<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Lift.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lift.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Lift.UI">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>    

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="FloorText" Text="0" Width="100" Height="50" Margin="5" Grid.Row="0" Grid.Column="1" TextAlignment="Center" FontSize="18"/>
        <Button Content="1" Width="100" Height="100" Margin="5" Grid.Row="1" Grid.Column="0"/>
        <Button Content="2" Width="100" Height="100" Margin="5" Grid.Row="1" Grid.Column="1"/>
        <Button Content="3" Width="100" Height="100" Margin="5" Grid.Row="1" Grid.Column="2"/>
        <Button Content="4" Width="100" Height="100" Margin="5" Grid.Row="2" Grid.Column="0"/>
        <Button Content="5" Width="100" Height="100" Margin="5" Grid.Row="2" Grid.Column="1"/>
        <Button Content="6" Width="100" Height="100" Margin="5" Grid.Row="2" Grid.Column="2"/>
        <Button Content="&lt;&gt;" Width="100" Height="100" Margin="5" Grid.Row="3" Grid.Column="0"/>
        <Button Content="&gt;&lt;" Width="100" Height="100" Margin="5" Grid.Row="3" Grid.Column="1"/>
        <Button Content="A" Width="100" Height="100" Margin="5" Grid.Row="3" Grid.Column="2"/>
    </Grid>

</Window>
